@using Microsoft.AspNet.Identity
@model List<ListedIN.Models.Education>


<div class="row" id="myProfile_Sec2">
    <div class="col-md-8">



        <div class="thumbnail">
            <div class="caption">  
                <button type="button" class="btn btn-success" style="float: right" data-toggle="modal" data-target="#myModal-AddSec2">
                    Add
                </button>  
                <p>Education</p>
             
                  <br>
                <br/>
                @{  
                   
                    
                    foreach (var education in Model)
                    {

                        <div class="row">
                            <div class="col-md-12">
                                @{
                                    if (User.Identity.GetUserId() == education.fk_User)
                                    {
                                        <button type="button" class="btn btn-primary" style="float: right" data-toggle="modal" data-target="#myModal-@education.Id">
                                            Edit
                                        </button>            
                                        <a class="btn btn-danger" style="float: right" onclick="Delete(@education.Id)">Delete</a>

                                    }
                                }
                                <h4>@education.Name</h4>
                                <h5>@education.Degree - @education.Field  - Grade ( @education.Grade )</h5>
                                @{
                                    if (education.FromYear != null && education.ToYear != null)
                                    {
                                        <h6> from @education.FromYear to @education.ToYear</h6>
                                    }
                                }


                                <p>@education.Description</p>
                            </div>
                        </div>

                    }


                }



            </div>
        </div>
    </div>
</div>  


    <script>
        function Delete(id) {
            var result = confirm("Confirm the Delete Process ?");

            if (result) {
                window.location.replace("/Profile/Delete/" + id);
            }
        }


    </script> 

